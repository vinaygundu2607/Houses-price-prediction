{
    "version": 2,
    "buildCommand": "pip install --upgrade pip setuptools wheel && pip install -r requirements.txt",
    "outputDirectory": ".",
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.10",
                "installCommand": "pip install --upgrade pip setuptools wheel"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ],
    "functions": {
        "api/**": {
            "excludeFiles": "{.next,*.cache,node_modules,public,app}/**"
        }
    }
}